<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:views="clr-namespace:Multitenancy.Views"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"            
            x:Class="Multitenancy.Views.MainPage"
             Title="{Binding Title}">

    <views:ItemsPage
        IsVisible="{Binding Converter={StaticResource FeatureToVisibleConverter}, 
                    ConverterParameter=list}"        
                    Title="List" IconImageSource="icon_feed.png" />

    <views:AboutPage 
        IsVisible="{Binding Converter={StaticResource FeatureToVisibleConverter}, 
                    ConverterParameter=about}"
        Title="About" IconImageSource="icon_about.png" />

</TabbedPage>